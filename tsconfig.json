{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "Node",
      "baseUrl": "./",
      "paths": {"*": ["@types/*"]},
      "allowJs": true,
      "checkJs": false,
      "sourceMap": true, 
      "outDir": "./modules",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"],  
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
  }
  